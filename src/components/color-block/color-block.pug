mixin color-block(params)
  - var color = params.hexcode

  if (params.opacity)
    - color = 'rgba(' + parseInt(params.hexcode.substring(1,3), 16) + ', ' + parseInt(params.hexcode.substring(3,5), 16) + ', ' + parseInt(params.hexcode.substring(5,7), 16) + ', ' + params.opacity + ')'

  .color-block
    .color-block__tile(style='background-color: ' + color)
    .color-block__info
      if (params.opacity)
        h2.color-block__title= params.title + ' ' + (params.opacity * 100).toString() + '%'
      else
        h2.color-block__title= params.title
      p.color-block__code= params.hexcode

