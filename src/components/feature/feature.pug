//- Using example: +feature({icon: 'material_icon-name', title: 'Feature title', desc: 'Feature description', noBorder: true (optional)})

mixin feature(params)
  - var noBorderClass = ''
  if params.noBorder
    - noBorderClass = 'feature--no-border'
  .feature(class=noBorderClass)
    .feature__logo
      i.material-icons.feature__icon!= params.icon
    .feature__info
      h3.feature__title!= params.title
      p.feature__desc!= params.desc

