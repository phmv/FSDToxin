include ../text-field/text-field

//- Using example: +subscription-form({id: 'email-field-id', name: 'field-name', placeholder: 'placeholder', value: 'value'(optional), })

mixin subscription-form(params)
  form.subscription-form
    +text-field({id: params.id, name: params.name, placeholder: params.placeholder, value: params.value, mask: params.mask, type: 'email', rightSpace: true, rq: true})
    .subscription-form__submit-container(for=params.id)
      button.subscription-form__submit(type='submit')
        i.material-icons.subscription-form__icon= 'arrow_forward'
