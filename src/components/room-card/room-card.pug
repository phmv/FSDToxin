include ../star-rating/star-rating
include ../carousel/carousel

//-  Using example: +room-card({roomNumber: '888', images: [require('../../../assets/img/room888.png'), require('../../../assets/img/room840.png'), require('../../../assets/img/room888.png'), require('../../../assets/img/room840.png')],  type: 'люкс', price: '9&nbsp;990', rating: 5, reviewsNumber: '145'})

mixin room-card(params)
  article.room-card
    .room-card__gallery
      +carousel(params.images)
    .room-card__body
      .room-card__title
        .room-card__room
          span.room-card__nsymb №&nbsp;
          span.room-card__number!= params.roomNumber
          if params.type
            span.room-card__type!= params.type
        .room-card__price
          span.room-card__value!= params.price + '₽&nbsp;'
          span.room-card__period в сутки
      .room-card__reviews
        .room-card__rating
          +star-rating(params.rating)
        .room-card__reviews-counter
          span.room-card__reviews-number!= params.reviewsNumber
          span &nbsp;Отзывов
