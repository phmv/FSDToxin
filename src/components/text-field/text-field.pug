mixin text-field(params)
  - var classesBase = 'text-field'
  - var classes = []
  - var fieldPattern
  - var type = 'text'

  if (params.type)
    - type = params.type
  if (params.rightSpace)
    - classes.push(classesBase + '--right-space')
  if (params.focusedView)
    - classes.push(classesBase + '--focused')
  if (params.dropdown)
    - classes.push(classesBase + '--dropdown')
  case params.dateType
    when 'range'
      - classes.push('range-date')
    when 'separated'
      - classes.push('separated-date')
  if(params.mask)
    - classes.push(params.mask)
  case params.mask
    when 'birthday-mask'
      - fieldPattern = '(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}'

  input.text-field(type=type, class=classes, id=params.id, name=params.name, placeholder=params.placeholder, value=params.value, pattern=fieldPattern, readonly=params.ro, required=params.rq, autocomplete=params.autocomplete)

