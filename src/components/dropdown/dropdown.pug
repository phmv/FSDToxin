include ../text-field/text-field

mixin dropdown(params)
  .dropdown
    +text-field({id: params.id, value: params.value, placeholder: params.placeholder, focusedView: params.focusedView, rightSpace: true, ro: true, rq: true, autocomplete: "off", dropdown: true, dateType: params.dateType})
    label.dropdown__icon-container(for=params.id)
      i.material-icons.dropdown__icon= 'expand_more'

